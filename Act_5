package com.mycompany.actividad_5;
import java.util.Scanner; 
/**
 *
 * @author work pc
 */
public class Actividad_5 {

    public static void main(String[] args) {
       Scanner obj = new Scanner(System.in);
        int a;
        int b;
      
      System.out.println("Ingrese el primer numero");
       a = obj.nextInt();
      System.out.println("Ingrese el segundo numero");
       b = obj.nextInt();
      
     int sum = a + b;
     int res = a - b;
     int mul = a * b; 
     int div = a / b;
     int mod = a % b;
     
      System.out.println("El resulatodo de la suma es: "+sum);
      System.out.println("El resultado de la resta es: "+res);
      System.out.println("El resultado de la multiplicación es: "+mul);
      System.out.println("El resultado de la divición es: "+div);
      System.out.println("El ressultado del moduco es: "+mod);
    }
}
